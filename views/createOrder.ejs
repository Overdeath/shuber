
<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        Send a package
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-lg-6">
            <form role="form">
              <div class="form-group">
                <label>Your phone</label>
                <input class="form-control" placeholder="" value="0722123567">
              </div>
              <label>Your package can be transported with:</label>
              <div class="form-group">
                <img src="/images/bike.png" class="img-package-size" id="package-small" data-id="small" />
                <img src="/images/car.png" class="img-package-size" id="package-medium" data-id="medium" />
                <img src="/images/truck.png" class="img-package-size" id="package-large" data-id="large" />

              </div>

              <h3>Pickup date and interval</h3>
              <div class="form-group">
                <label>Start</label>
                <input class="form-control" type="text" id="pickup-date-start" name="pickup-date-start">
              </div>
              <div class="form-group">
                <label>To</label>
                <input class="form-control" type="text" id="pickup-date-end" name="pickup-date-end">
              </div>
              <div class="form-group">
                <label>Guide to location/Obs</label>
                <input class="form-control" placeholder="Type any details that could help the driver" value="">
              </div>
              <div class="form-group">
                  <label>Address:</label>
                  <input type="text" class="form-control" id="pickup-address"/>
              </div>
              <div class="form-group">
                  <div class="hidden">
                      <label>Radius:</label>
                      <input type="text" class="form-control" id="pickup-radius"/>
                  </div>
                  <div id="pickup-map" style="margin-top: 5px; width: 100%; height: 400px;"></div>

                  <div class="hidden">
                  Lat.: <input type="text" id="pickup-lat"/>
                  Long.: <input type="text" id="pickup-lon"/>
                  </div>
              </div>

              <h3>Receiver details</h3>
              <div class="form-group">
                <label>Name</label>
                <input class="form-control" placeholder="name" value="">
              </div>
              <div class="form-group">
                <label>Phone</label>
                <input class="form-control" placeholder="phone" value="">
              </div>

              <h3>Delivery date and interval</h3>
              <div class="form-group">
                <label>Start</label>
                <input class="form-control" type="text" id="delivery-date-start" name="delivery-date-start">
              </div>
              <div class="form-group">
                <label>To</label>
                <input class="form-control" type="text" id="delivery-date-end" name="delivery-date-end">
              </div>
              <div class="form-group">
                <label>Guide to location/Obs</label>
                <input class="form-control" placeholder="Type any details that could help the driver" value="">
              </div>

                <div class="form-group">
                    <label>Address:</label>
                    <input type="text" class="form-control" id="delivery-address"/>
                </div>
                <div class="form-group">
                    <div class="hidden">
                        <label>Radius:</label>
                        <input type="text" class="form-control" id="delivery-radius"/>
                    </div>
                    <div id="delivery-map" style="margin-top: 5px; width: 100%; height: 400px;"></div>

                    <div class="hidden">
                    Lat.: <input type="text" id="delivery-lat"/>
                    Long.: <input type="text" id="delivery-lon"/>
                    </div>
                </div>

              <button type="submit" class="btn btn-primary btn-lg">Place order</button>

            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- /.row -->

